<%= form_for @application do |f| %>
    <%= f.label :company, "Company" %><br>
    <%= f.text_field :company %>
    <% if @application.errors[:company] != [] %>
        <%= @application.errors[:company][0] %>
    <% end %>

    <%= f.label :job_title, "Title" %><br>
    <%= f.text_field :job_title %>

    <%= f.label :job_location, "Location" %><br>
    <%= f.text_field :job_location %>

    <%= f.label :job_salary, "Salary" %><br>
    <%= f.text_field :job_salary %>

    <%= f.label :job_url, "Job Posting URL" %><br>
    <%= f.text_field :job_url %>

    <%= f.label :description, "Description" %><br>
    <%= f.text_field :description %>

    <%= f.label :date_applied, "Date Applied" %><br>
    <%= f.text_field :date_applied %>

    <%= f.submit %><br>
    <% end %>