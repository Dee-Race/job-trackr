<%= form_for @user, url: signup_path, method: :post do |f| %>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>

  <%= f.label :password_digest, "Password" %>
  <%= f.password_field :password_digest %>

   <%= f.submit "Sign Up" %>
<% end %>