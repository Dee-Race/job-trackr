<h3>Here are your most popular job titles:</h3>

<ul>
<% @job_titles.most_popular.each do |job_title, count| %>
    <li><%= job_title %> - <%= count %></li>
    <% end %>
</ul>

<h3>Click below to add a comment and see more information about an application:</h3>


     <% @job_titles.sort_title.each do |job_title| %>
      <p><%= job_title.title %></p>
      <% job_title.applications.each do |application| %>
    <li>
      <%= link_to application.company, application_path(application)%>
      </li>
    <% end %>
   <% end %>

